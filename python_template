from __future__ import print_function

import argparse
import os
import sys


class Main(object):
    _version = '1.0'
    _name = os.path.basename(sys.argv[0])

    def __init__(self):
        self._args = self._parse_args()

    def __del__(self):
        pass

    def _parse_args(self):
        parser = argparse.ArgumentParser(description='Script description')
        parser.add_argument('--version', action='version', version='%s %s' % (self._name, self._version))

        #        subparsers = parser.add_subparsers(title='commands')

        #        parser_a = subparsers.add_parser('a', help='a help')
        #        parser_a.add_argument('bar', help='bar help')

        #        parser_b = subparsers.add_parser('b', help='b help')
        #        parser_b.add_argument('--baz', choices='XYZ', help='baz help')

        return parser.parse_args()

    def _display_version(self):
        print('%s version %s' % (self._name, self._version))

    @staticmethod
    def die(message=None, code=1):
        if message:
            print(message, file=sys.stderr)
        exit(code)

    @staticmethod
    def run():
        print('Hello World!')


if __name__ == '__main__':
    try:
        main = Main()
        main.run()
    except KeyboardInterrupt:
        print('\nCancelling...')
